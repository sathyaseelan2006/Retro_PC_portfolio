/* ==========================================
   RETRO OS PORTFOLIO - REFINED DESIGN
   Based on reference image layout
   ========================================== */

/* === CSS VARIABLES === */
:root {
    /* Soft Pastel Palette from Reference */
    --bg-mint: #c5e8e0;
    --bg-cream: #f5f0e8;
    --bg-beige: #e8dfd0;
    --bg-white: #ffffff;
    --bg-card: #f8f5f0;
    --border-dark: #3d3d3d;
    --border-light: #d0d0d0;
    --text-primary: #2d2d2d;
    --text-secondary: #666666;
    --accent-blue: #5a9fd4;
    --accent-green: #7ec4b8;
    --shadow: rgba(0, 0, 0, 0.15);

    /* Fonts */
    --font-mono: 'VT323', 'Courier New', monospace;
    --font-pixel: 'Press Start 2P', cursive;

    /* Spacing */
    --spacing-xs: 6px;
    --spacing-sm: 12px;
    --spacing-md: 20px;
    --spacing-lg: 32px;
}

/* === GLOBAL RESET === */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html,
body {
    height: 100%;
    overflow: hidden;
}

body {
    font-family: var(--font-mono);
    background: var(--bg-mint);
    color: var(--text-primary);
    font-size: 18px;
    line-height: 1.6;
}

/* === DESKTOP CONTAINER === */
.desktop-container {
    height: 100vh;
    background: linear-gradient(135deg, #c5e8e0 0%, #e8dfd0 50%, #f5f0e8 100%);
    position: relative;
    padding: var(--spacing-md);
}

.desktop-container .row {
    height: 100%;
}

/* === LEFT SIDEBAR - MUSIC PLAYER === */
.left-sidebar {
    width: 200px;
    padding-right: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.music-player-widget {
    background: var(--bg-cream);
    border: 3px solid var(--border-dark);
    border-radius: 8px;
    box-shadow: 6px 6px 0 var(--shadow);
    overflow: hidden;
}

.widget-header {
    background: var(--border-dark);
    color: white;
    padding: var(--spacing-xs) var(--spacing-sm);
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-weight: bold;
}

.widget-icon {
    font-size: 16px;
}

.widget-title {
    text-transform: lowercase;
}

.widget-body {
    padding: var(--spacing-sm);
}

.album-art-large {
    width: 100%;
    aspect-ratio: 1;
    background: var(--bg-white);
    border: 2px solid var(--border-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--spacing-sm);
    position: relative;
}

.album-icon {
    font-size: 48px;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }
}

.track-display {
    text-align: center;
    margin-bottom: var(--spacing-sm);
    font-size: 20px;
    font-weight: bold;
}

.track-name {
    color: var(--text-primary);
}

.system-stats {
    margin-bottom: var(--spacing-sm);
}

.stat-row {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-xs);
}

.stat-label {
    font-size: 12px;
    width: 30px;
    color: var(--text-secondary);
}

.stat-bar {
    flex: 1;
    height: 8px;
    background: var(--bg-white);
    border: 1px solid var(--border-dark);
    position: relative;
    overflow: hidden;
}

.stat-fill {
    height: 100%;
    background: var(--accent-green);
    transition: width 0.3s ease;
}

.player-controls-widget {
    display: flex;
    justify-content: center;
    gap: var(--spacing-xs);
}

.ctrl-btn {
    width: 32px;
    height: 32px;
    background: var(--bg-white);
    border: 2px solid var(--border-dark);
    border-radius: 4px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    transition: all 0.2s ease;
}

.ctrl-btn:hover {
    background: var(--accent-green);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px var(--shadow);
}

.ctrl-btn:active {
    transform: translateY(0);
    box-shadow: none;
}

.play-btn {
    background: var(--accent-green);
    color: white;
}

/* Now Playing Card */
.now-playing-card {
    background: var(--bg-cream);
    border: 3px solid var(--border-dark);
    border-radius: 8px;
    padding: var(--spacing-sm);
    box-shadow: 6px 6px 0 var(--shadow);
    text-align: center;
}

.np-header {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 4px;
}

.np-subtext {
    font-size: 13px;
    color: var(--text-secondary);
    margin-bottom: 8px;
}

.np-footer {
    font-size: 11px;
    color: var(--text-secondary);
}

/* === MAIN CONTENT AREA === */
.main-content-area {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--spacing-md);
}

.browser-window {
    width: 100%;
    max-width: 700px;
    height: 85vh;
    background: var(--bg-white);
    border: 3px solid var(--border-dark);
    border-radius: 12px;
    box-shadow: 8px 8px 0 var(--shadow);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.browser-header {
    background: var(--bg-beige);
    border-bottom: 3px solid var(--border-dark);
    padding: var(--spacing-sm);
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
}

.browser-controls {
    display: flex;
    gap: 8px;
}

.control-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 2px solid var(--border-dark);
}

.control-dot.red {
    background: #ff5f56;
}

.control-dot.yellow {
    background: #ffbd2e;
}

.control-dot.green {
    background: #27c93f;
}

.browser-url {
    flex: 1;
    background: var(--bg-white);
    border: 2px solid var(--border-dark);
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 14px;
    color: var(--text-secondary);
}

.browser-body {
    flex: 1;
    padding: var(--spacing-lg);
    overflow-y: auto;
    background: var(--bg-white);
}

.browser-body::-webkit-scrollbar {
    width: 12px;
}

.browser-body::-webkit-scrollbar-track {
    background: var(--bg-cream);
    border-left: 2px solid var(--border-dark);
}

.browser-body::-webkit-scrollbar-thumb {
    background: var(--accent-green);
    border: 2px solid var(--border-dark);
    border-radius: 6px;
}

/* Search Container */
.search-container {
    margin-bottom: var(--spacing-lg);
}

.search-input {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    font-family: var(--font-mono);
    font-size: 18px;
    border: 3px solid var(--border-dark);
    border-radius: 8px;
    background: var(--bg-cream);
    transition: all 0.3s ease;
}

.search-input:focus {
    outline: none;
    background: var(--bg-white);
    box-shadow: 0 0 0 4px var(--accent-green);
}

/* Welcome Section */
.welcome-section {
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.welcome-title {
    font-size: 48px;
    font-weight: bold;
    margin-bottom: var(--spacing-lg);
    color: var(--text-primary);
}

.nav-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
}

.nav-btn {
    padding: var(--spacing-sm) var(--spacing-lg);
    background: var(--bg-cream);
    border: 3px solid var(--border-dark);
    border-radius: 8px;
    font-family: var(--font-mono);
    font-size: 16px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: lowercase;
    font-weight: bold;
}

.nav-btn:hover {
    background: var(--accent-green);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 6px 12px var(--shadow);
}

.nav-btn:active {
    transform: translateY(0);
}

/* Social Icons */
.social-icons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
}

.social-icon {
    width: 50px;
    height: 50px;
    background: var(--bg-cream);
    border: 3px solid var(--border-dark);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    text-decoration: none;
    transition: all 0.2s ease;
}

.social-icon:hover {
    background: var(--accent-blue);
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 4px 8px var(--shadow);
}

/* Content Sections */
.content-section {
    animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.section-title {
    font-size: 32px;
    margin-bottom: var(--spacing-md);
    color: var(--text-primary);
    border-bottom: 3px solid var(--accent-green);
    padding-bottom: var(--spacing-sm);
}

.projects-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.project-item {
    background: var(--bg-card);
    border: 3px solid var(--border-dark);
    border-radius: 8px;
    padding: var(--spacing-md);
    transition: all 0.3s ease;
}

.project-item:hover {
    transform: translateX(10px);
    box-shadow: 6px 6px 0 var(--shadow);
}

.project-item h3 {
    font-size: 20px;
    margin-bottom: var(--spacing-sm);
    color: var(--accent-blue);
}

.project-item p {
    font-size: 16px;
    margin-bottom: var(--spacing-sm);
    color: var(--text-secondary);
}

.project-links {
    display: flex;
    gap: var(--spacing-sm);
}

.link-btn {
    padding: 8px 16px;
    background: var(--accent-green);
    color: white;
    border: 2px solid var(--border-dark);
    border-radius: 6px;
    text-decoration: none;
    font-size: 14px;
    font-weight: bold;
    transition: all 0.2s ease;
}

.link-btn:hover {
    background: var(--accent-blue);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px var(--shadow);
}

/* About Content */
.about-content {
    font-size: 16px;
    line-height: 1.8;
}

.about-content h3 {
    font-size: 28px;
    margin-bottom: var(--spacing-sm);
    color: var(--accent-blue);
}

.about-content .subtitle {
    font-size: 18px;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
}

.about-content h4 {
    font-size: 20px;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
    color: var(--accent-green);
}

.about-content ul {
    padding-left: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
}

.about-content li {
    margin-bottom: var(--spacing-xs);
}

/* Downloads Grid */
.downloads-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.download-card {
    background: var(--bg-card);
    border: 3px solid var(--border-dark);
    border-radius: 8px;
    padding: var(--spacing-md);
    text-align: center;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
}

.download-card:hover {
    background: var(--accent-green);
    color: white;
    transform: translateY(-5px);
    box-shadow: 0 8px 16px var(--shadow);
}

.download-icon {
    font-size: 48px;
    margin-bottom: var(--spacing-sm);
}

.download-title {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 4px;
}

.download-desc {
    font-size: 14px;
    opacity: 0.8;
}

.certificates-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.cert-link {
    padding: var(--spacing-sm) var(--spacing-md);
    background: var(--bg-card);
    border: 2px solid var(--border-dark);
    border-radius: 6px;
    text-decoration: none;

    .desktop-icons-vertical {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-lg);
        align-items: center;
    }

    .desktop-icon-v {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-xs);
        cursor: pointer;
        transition: all 0.2s ease;
        padding: var(--spacing-sm);
        border-radius: 8px;
    }

    .desktop-icon-v:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: scale(1.1);
    }

    .icon-v {
        width: 64px;
        height: 64px;
        background: var(--bg-cream);
        border: 3px solid var(--border-dark);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        box-shadow: 4px 4px 0 var(--shadow);
        transition: all 0.2s ease;
    }

    .desktop-icon-v:hover .icon-v {
        transform: translateY(-4px);
        box-shadow: 6px 6px 0 var(--shadow);
    }

    .label-v {
        font-size: 13px;
        text-align: center;
        color: var(--text-primary);
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
    }

    /* === RESPONSIVE DESIGN === */
    @media (max-width: 992px) {
        .desktop-container {
            padding: var(--spacing-sm);
        }

        .left-sidebar {
            width: 160px;
        }

        .right-sidebar {
            width: 100px;
        }

        .icon-v {
            width: 48px;
            height: 48px;
            font-size: 24px;
        }

        .browser-window {
            max-width: 100%;
        }

        .welcome-title {
            font-size: 36px;
        }
    }

    @media (max-width: 768px) {
        .desktop-container .row {
            flex-direction: column;
        }

        .left-sidebar,
        .right-sidebar {
            width: 100%;
            padding: 0;
            margin-bottom: var(--spacing-md);
        }

        .desktop-icons-vertical {
            flex-direction: row;
            justify-content: center;
        }

        .music-player-widget {
            max-width: 300px;
            margin: 0 auto;
        }

        .browser-window {
            height: auto;
            min-height: 400px;
        }

        .welcome-title {
            font-size: 28px;
        }

        .nav-buttons {
            flex-direction: column;
        }

        .nav-btn {
            width: 100%;
        }
    }

    /* === UTILITY CLASSES === */
    .mt-4 {
        margin-top: var(--spacing-lg);
    }

    .mb-3 {
        margin-bottom: var(--spacing-md);
    }

    .text-center {
        text-align: center;
    }